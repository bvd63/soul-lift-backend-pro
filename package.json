{
  "name": "soul-lift-backend",
  "version": "1.0.8",
  "description": "SoulLift motivational quotes backend (Fastify + Stripe + OpenAI + DeepL + Postgres + FCM v1 + Sentry)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "test": "node tests/basic.test.js",
    "test:integration": "node tests/integration.test.js",
    "test:logout": "node tests/logout.test.js",
    "test:migration": "node tests/migration.test.js",
    "test:all": "npm test && npm run test:logout && npm run test:migration",
    "migrate": "node scripts/migrate.js",
    "lint": "eslint ."
  },
  "engines": { "node": ">=20.10.0" },
  "dependencies": {
    "fastify": "4.28.1",
    "@fastify/cors": "9.0.1",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "9.0.0",
    "@fastify/compress": "7.0.1",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "2.1.0",
    "fastify-metrics": "10.3.0",
    "fastify-raw-body": "4.3.0",
    "jsonwebtoken": "9.0.2",
    "bcryptjs": "2.4.3",
    "node-fetch": "3.3.2",
    "node-cron": "3.0.3",
    "stripe": "16.6.0",
    "pg": "8.12.0",
    "@sentry/node": "7.120.3",
    "dotenv": "16.4.5",
    "envalid": "7.3.1"
    ,
    "redis": "4.6.7"
  },
  "devDependencies": {
    "eslint": "9.13.0"
  },
  "overrides": { "undici": "6.18.1" }
}

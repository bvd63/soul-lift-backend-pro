# SoulLift API – Environment Example

# Runtime
NODE_ENV=development
PORT=3000
JWT_SECRET=change-me
FRONTEND_URL=http://localhost:5173

# Feature flags & AI
USE_OPENAI=true
OPENAI_API_KEY=
DEEPL_API_KEY=
DEEPL_ENDPOINT=https://api-free.deepl.com

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Stripe billing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_MONTHLY=
STRIPE_PRICE_ID_YEARLY=

# Firebase (Service Account)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Use literal \n for newlines; code replaces them at runtime
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n

# Sentry
SENTRY_DSN=

# Database
DATABASE_URL=
DATABASE_SSL=false

# CORS
CORS_ORIGINS=http://localhost:5173

# Redis Enterprise Cloud (Managed)
# Folosește conexiune TLS și autentificare; URL-ul poate fi fără credențiale
# Ex.: REDIS_URL=rediss://<host>:<port>
REDIS_URL=
REDIS_USERNAME=default
REDIS_PASSWORD=
REDIS_TLS=true

# Alternativ: Upstash Redis REST (nu folosi REDIS_URL în acest caz)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
